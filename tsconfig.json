{
  "compilerOptions": {
       
    "target": "es2017" ,
    "module": "commonjs", 
    "lib": [
      "es6"
    ] ,
    "allowJs": true ,    
    "outDir": "./dist" ,
    "rootDir": "./src" ,    
    "removeComments": true,
    "baseUrl": "./" ,    
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true ,    
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true ,
    "resolveJsonModule": true,
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@config/*": ["./src/config/*"]
    }
  },  
  "include": ["src/**/*"]
}
